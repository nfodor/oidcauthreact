# JWT secret for encoding and decoding JWT tokens
JWT_SECRET=your_jwt_secret_key_here

# Token expiration in seconds (15 minutes)
TOKEN_EXPIRY=900

# Refresh token expiration in seconds (7 days)
REFRESH_TOKEN_EXPIRY=604800

# MongoDB connection URI for the backend
MONGO_URI="mongodb://username:password@your-mongodb-host:port/database?ssl=true&directConnection=true"

# Email settings for sending magic login links and notifications
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password

# Server URL for local development
APP_URL=http://localhost:5000

# Default admin password (only used when creating the first admin user)
ADMIN_PASSWORD=change_this_admin_password
